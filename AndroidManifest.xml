<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.true_north"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!--
             We want to implement our own custom style but this will be the last of our worries. 
        	 We also have a custom png set to use for our drawable app launcher icon.
        -->


        <!--
            Main Activity:
        	- Pairing Screen.
       		- Root Activity in the tree of Activity.
        -->
        <activity
            android:name="com.example.true_north.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
        <service></service>
        
        <reciever></reciever>
        
        <provider></provider> 
        
        To be implemented later..necessary.
        -->
        <activity
            android:name="com.example.true_north.ArrowActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_arrow"
            android:parentActivityName="MainActivity"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
    </application>

</manifest>
